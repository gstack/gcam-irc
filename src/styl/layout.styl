main, .app
  height: 100%

.app
  display: -webkit-flex
  display: flex

.chat
  display: -webkit-flex
  display: flex
  flex-direction: column
  align-items: stretch
  flex: 1

.titlebar
  display: -webkit-flex
  display: flex
  padding: 10px
  color: white
  background: #000000
  box-sizing: content-box!important

  strong
    margin-right: 10px

  span
    flex: 1
    max-height: 19px
    
i.settings
  width: 17px
  height: 17px
  background: url('img/gear.svg')
  display: block
  -webkit-filter: hue-rotate(180deg)
  color: #fff
  background-color: #fff

.messageInput
  display: -webkit-flex
  display: flex
  padding: 10px
  border-top: 1px solid #DDD
  input
    flex: 1
    margin-right: 10px

.userList
  width: 250px
